<form action="/todos/{{ todo._id }}?_method=PUT" method="POST">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if todo.isDone}}checked{{/if}} disabled>
    </div>
    <input type="text" placeholder="name" name="name" value="{{ todo.name }}">
    <button type="submit">Save</button>
  </div>
</form>